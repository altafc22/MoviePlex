                                    android:background="@drawable/rounded_chip"
                                    android:padding="5dp"
                                    android:gravity="center"
                                    android:id="@+id/seats"/>


                            </LinearLayout>-->

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"

                        android:gravity="center"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Amount Payable: "
                            android:textSize="16sp"
                            android:layout_weight="4"
                            android:fontFamily="@font/segoeui"
                            android:textColor="@color/color_ui_text"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" ₹. "
                                android:textSize="18sp"
                                android:id="@+id/currency_symbol"
                                android:fontFamily="@font/segoeui_bold"
                                android:textColor="@color/color_ui_text"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0"
                                android:textSize="18sp"
                                android:fontFamily="@font/segoeui_bold"
                                android:textColor="@color/color_ui_text"
                                android:id="@+id/tv_total_amt" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </android.support.constraint.ConstraintLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:id="@+id/bottom_bar_layout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:onClick="gotoPreviousActivity"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:background="@drawable/booking_button_gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:fontFamily="@font/segoeui_bold"
                    android:textColor="@color/color_ui_text"
                    android:textSize="17sp" />



            </LinearLayout>

        </LinearLayout> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:onClick="gotoPayment"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:background="@drawable/button_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay Now"
                android:fontFamily="@font/segoeui_bold"
                android:textColor="@color/colorWhite"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>


    </LinearLayout>


</RelativeLayout>